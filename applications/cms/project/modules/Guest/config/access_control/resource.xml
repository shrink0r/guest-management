<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://berlinonline.de/schemas/honeybee/config/access_control/1.0" 
    xmlns:env="http://berlinonline.de/schemas/honeybee/config/envelope/definition/1.0" 
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0">
    <ae:configuration>
        <!-- 
            Defines all actions that shall be available upon the guest resource.

            :INFO:
            In opposite to the permissions file, which will probally vanish,
            this file will serve as a source to the later rights gui,
            allowing to show the available actions per resource/module.
        -->
        <resources>
            <resource name="guest">
                <description>Defines a resource that represents guest documents.</description>
                <actions>
                    <action>guest::read</action>
                    <action>guest::write</action>
                    <action>guest::create</action>

                    <action>guest.edit::read</action>
                    <action>guest.edit::write</action>
                    <action>guest.edit::promote</action>
                    <action>guest.edit::delete</action>

                    <action>guest.publish::write</action>
                    <action>guest.publish::promote</action>
                    <action>guest.publish::demote</action>

                    <action>guest.published::read</action>
                    <action>guest.published::write</action>
                    <action>guest.published::promote</action>
                    <action>guest.published::demote</action>
                    <action>guest.published::delete</action>

                    <action>guest.archive::write</action>
                    <action>guest.archive::promote</action>
                    <action>guest.archive::demote</action>

                    <action>guest.archived::read</action>
                    <action>guest.archived::write</action>
                    <action>guest.archived::promote</action>
                    <action>guest.archived::demote</action>
                    <action>guest.archived::delete</action>

                    <action>guest.delete::write</action>
                </actions>
            </resource>
        </resources>
    </ae:configuration>
</ae:configurations>